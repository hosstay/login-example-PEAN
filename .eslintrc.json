{
  "env": {
      "browser": true,
      "es2020": true,
      "node": true
  },
  "extends": [
      "google"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module",
      "ecmaFeatures": {
          "legacyDecorators": true
      }
  },
  "rules": {
      "strict": 0,
      "require-jsdoc": 0,
      "linebreak-style": ["error", "unix"],
      "max-len": ["error", { "code": 10000 }],
          "eol-last": ["error", "never"],
      "comma-dangle": ["error", "never"],
      "no-multi-spaces": ["error", { "exceptions": { "ImportDeclaration": true, "VariableDeclarator": true } }],
      "new-cap": ["error", { "capIsNewExceptions": ["Router"], "newIsCapExceptions": ["utc"] }]
  }
}
